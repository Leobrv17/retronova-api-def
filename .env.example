# Application
APP_NAME=Arcade API
VERSION=1.0.0
DEBUG=true

# Database
DATABASE_URL=postgresql://arcade_user:arcade_password@db:5432/arcade_db

# Firebase - Chemins vers les fichiers JSON de credentials
# Téléchargez les fichiers JSON depuis Firebase Console > Project Settings > Service Accounts
FIREBASE_USER_CREDENTIALS_PATH=./firebase/firebase-user-credentials.json
FIREBASE_ADMIN_CREDENTIALS_PATH=./firebase/firebase-admin-credentials.json

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Arcade API Key (utilisée par les bornes pour s'authentifier)
ARCADE_API_KEY=arcade-super-secret-api-key-change-this-in-production